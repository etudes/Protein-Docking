OBJ=	comap.o ../gklib/linux_kleylib  ../ccp4libs_latest_m64_linux/libccp4f.a  ../ccp4libs_latest_m64_linux/libccp4c.a
EXEC =	comap
INCL=	Makefile_linux
SUBS = 
STATIC = 
##SUBS## SUBS = comap_subs.o
##INCL## INCL = Makefile_linux comap.incl
##STATIC## STATIC = -static

fc =	 gfortran -DLINUX -m64

opt= -O -u -ffixed-line-length-132 -I..
link= -O

$(EXEC):	$(OBJ) $(SUBS)
	$(fc) $(link) -o $(EXEC) $(SUBS) $(OBJ) $(STATIC) ; strip $(EXEC)

comap.o:	comap.fpp $(INCL)
	$(fc) $(opt) -c comap.fpp

##SUBS## comap_subs.o:	comap_subs.fpp $(INCL)
##SUBS## 			$(fc) $(opt) -c comap_subs.fpp
