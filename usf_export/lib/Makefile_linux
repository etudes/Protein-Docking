OBJ=	lib.o ../gklib/linux_kleylib  ../ccp4libs_latest_m64_linux/libccp4f.a  ../ccp4libs_latest_m64_linux/libccp4c.a
EXEC =	lib
INCL=	Makefile_linux
SUBS = 
STATIC = 
##SUBS## SUBS = lib_subs.o
##INCL## INCL = Makefile_linux lib.incl
##STATIC## STATIC = -static

fc =	 gfortran -DLINUX -m64

opt= -O -u -ffixed-line-length-132 -I..
link= -O

$(EXEC):	$(OBJ) $(SUBS)
	$(fc) $(link) -o $(EXEC) $(SUBS) $(OBJ) $(STATIC) ; strip $(EXEC)

lib.o:	lib.fpp $(INCL)
	$(fc) $(opt) -c lib.fpp

##SUBS## lib_subs.o:	lib_subs.fpp $(INCL)
##SUBS## 			$(fc) $(opt) -c lib_subs.fpp
