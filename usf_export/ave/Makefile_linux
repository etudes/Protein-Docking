$(EXEC):	$(OBJ) $(SUBS)
	$(fc) $(link) -o $(EXEC) $(SUBS) $(OBJ) $(STATIC) ; strip $(EXEC)

ave.o:	ave.fpp $(INCL)
	$(fc) $(opt) -c ave.fpp

