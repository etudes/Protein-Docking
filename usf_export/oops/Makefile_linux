OBJ=	oops.o ../gklib/linux_kleylib  ../ccp4libs_latest_m64_linux/libccp4f.a  ../ccp4libs_latest_m64_linux/libccp4c.a
EXEC =	oops
INCL=	Makefile_linux
SUBS = 
STATIC = 
##SUBS## SUBS = oops_subs.o
INCL = Makefile_linux oops.incl
##STATIC## STATIC = -static

fc =	 gfortran -DLINUX -m64

opt= -O -u -ffixed-line-length-132 -I..
link= -O

$(EXEC):	$(OBJ) $(SUBS)
	$(fc) $(link) -o $(EXEC) $(SUBS) $(OBJ) $(STATIC) ; strip $(EXEC)

oops.o:	oops.fpp $(INCL)
	$(fc) $(opt) -c oops.fpp

##SUBS## oops_subs.o:	oops_subs.fpp $(INCL)
##SUBS## 			$(fc) $(opt) -c oops_subs.fpp
