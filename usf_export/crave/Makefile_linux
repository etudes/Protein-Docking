OBJ=	crave.o ../gklib/linux_kleylib  ../ccp4libs_latest_m64_linux/libccp4f.a  ../ccp4libs_latest_m64_linux/libccp4c.a
EXEC =	crave
INCL=	Makefile_linux
SUBS = 
STATIC = 
##SUBS## SUBS = crave_subs.o
##INCL## INCL = Makefile_linux crave.incl
##STATIC## STATIC = -static

fc =	 gfortran -DLINUX -m64

opt= -O -u -ffixed-line-length-132 -I..
link= -O

$(EXEC):	$(OBJ) $(SUBS)
	$(fc) $(link) -o $(EXEC) $(SUBS) $(OBJ) $(STATIC) ; strip $(EXEC)

crave.o:	crave.fpp $(INCL)
	$(fc) $(opt) -c crave.fpp

##SUBS## crave_subs.o:	crave_subs.fpp $(INCL)
##SUBS## 			$(fc) $(opt) -c crave_subs.fpp
