#
OBJ=	seaman.o ../gklib/linux_kleylib  ../ccp4libs_latest_m64_linux/libccp4f.a  ../ccp4libs_latest_m64_linux/libccp4c.a
EXEC =	seaman
INCL=	Makefile_linux
SUBS = 
STATIC = 
SUBS = seaman_subs.o
INCL = Makefile_linux seaman.incl
##STATIC## STATIC = -static

fc =	 gfortran -DLINUX -m64

opt= -O -u -ffixed-line-length-132 -I..
link= -O

$(EXEC):	$(OBJ) $(SUBS)
	$(fc) $(link) -o $(EXEC) $(SUBS) $(OBJ) $(STATIC) ; strip $(EXEC)

seaman.o:	seaman.fpp $(INCL)
	$(fc) $(opt) -c seaman.fpp

seaman_subs.o:	seaman_subs.fpp $(INCL)
			$(fc) $(opt) -c seaman_subs.fpp
